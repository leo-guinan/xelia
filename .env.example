# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/xelia

# Session Configuration (REQUIRED - Generate a strong random string)
# Generate with: openssl rand -base64 32
SESSION_SECRET=your-secret-key-change-in-production-must-be-32-chars-minimum

# Plaid API Configuration (Optional for development)
PLAID_CLIENT_ID=
PLAID_SECRET=
PLAID_ENV=sandbox

# Method API Configuration (Optional for development)
METHOD_API_KEY=
METHOD_ENV=sandbox

# Server Configuration
PORT=5173
NODE_ENV=development

# Security Configuration (Optional for development)
ENCRYPTION_KEY=your-encryption-key-change-in-production-32-chars-minimum
